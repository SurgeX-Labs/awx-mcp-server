{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.SurgeX-Labs/awx-mcp-server",
  "displayName": "AWX MCP Server",
  "description": "Control AWX/Ansible Tower through the Model Context Protocol. Manage infrastructure automation with natural language - 49 tools for jobs, templates, inventories, and local playbook development.",
  "icon": "icon.png",
  "repository": {
    "url": "https://github.com/SurgeX-Labs/awx-mcp-server",
    "source": "github"
  },
  "version": "1.1.0",
  "packages": [
    {
      "registryType": "github",
      "identifier": "SurgeX-Labs/awx-mcp-server",
      "version": "1.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "The base URL of your AWX/Ansible Tower instance",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "AWX_BASE_URL"
        },
        {
          "description": "AWX API token for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "AWX_TOKEN"
        },
        {
          "description": "AWX username (alternative to token)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "AWX_USERNAME"
        },
        {
          "description": "AWX password (alternative to token)",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "AWX_PASSWORD"
        },
        {
          "description": "Whether to verify SSL certificates (set to false for self-signed)",
          "isRequired": false,
          "format": "boolean",
          "isSecret": false,
          "name": "AWX_VERIFY_SSL"
        }
      ]
    }
  ]
}
