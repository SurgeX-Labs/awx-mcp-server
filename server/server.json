{
  "name": "io.github.SurgeX-Labs/awx-mcp-server",
  "displayName": "AWX MCP Server",
  "description": "Control AWX/Ansible Tower through the Model Context Protocol. Manage infrastructure automation with natural language.",
  "version": "1.1.0",
  "icon": "icon.png",
  "author": {
    "name": "SurgeX Labs",
    "email": "support@surgexlabs.com",
    "url": "https://github.com/SurgeX-Labs"
  },
  "license": "MIT",
  "homepage": "https://github.com/SurgeX-Labs/awx-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/SurgeX-Labs/awx-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "awx",
    "ansible-tower",
    "ansible",
    "automation",
    "github-copilot",
    "claude",
    "cursor",
    "python",
    "devops",
    "infrastructure"
  ],
  "capabilities": [
    "tools"
  ],
  "transport": [
    "stdio"
  ],
  "deployment": {
    "type": "github",
    "owner": "SurgeX-Labs",
    "repo": "awx-mcp-server"
  },
  "installation": {
    "pip": "git+https://github.com/SurgeX-Labs/awx-mcp-server.git",
    "command": "python -m awx_mcp_server.mcp_server"
  },
  "configuration": {
    "required": [
      "AWX_BASE_URL"
    ],
    "optional": [
      "AWX_TOKEN",
      "AWX_USERNAME",
      "AWX_PASSWORD",
      "AWX_VERIFY_SSL"
    ]
  },
  "clients": [
    "vscode",
    "claude-desktop",
    "cursor",
    "windsurf",
    "github-copilot",
    "cline"
  ],
  "tools": [
